@model IEnumerable<Image_Processor.Models.TemplateViewModel>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<table id="example1" class="table table-bordered ">
    <thead class="table-avatar" style="text-align:center">
        <tr>
            <th><i class="icon-color"></i> #</th>
            <th><i class="icon-color"></i> Name</th>
            <th><i class="icon-color"></i> Description</th>
            <th><i class="icon-color"></i> Total Videos</th>
            <th><i class="icon-color"></i> Total Images</th>            
            <th><i class="icon-color"></i> Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center;">
                    @(i + 1)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.TotalVideos)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.TotalImages)
                </td>                
                <td class="project-actions text-right">                    
                    <button class="btn btn-outline-success btn-sm" onclick="loadView('/Templates/Edit','myModal','myModalContent','1')">
                        <i class="fas fa-pencil-alt">
                        </i>
                        Edit
                    </button>
                    <button class="btn btn-outline-danger btn-sm" onclick="loadView('/Templates/Delete','myModal','myModalContent','1')">
                        <i class="fas fa-trash">
                        </i>
                        Delete
                    </button>
                </td>
            </tr>
            i += 1;
        }
    </tbody>
    <tfoot style="text-align:center">
        <tr>
            <th><i class="icon-color"></i> #</th>
            <th><i class="icon-color"></i> Name</th>
            <th><i class="icon-color"></i> Description</th>
            <th><i class="icon-color"></i> Total Videos</th>
            <th><i class="icon-color"></i> Total Images</th>            
            <th><i class="icon-color"></i> Actions</th>
        </tr>
    </tfoot>
</table>
<script>
    $(function() {

        $("#example1").DataTable({
            lengthMenu: [
                [10, 25, 50, 100, -1],
                [10, 25, 50, 100, 'All'],
            ],
            "responsive": true, "lengthChange": true, "autoWidth": false,
            "buttons": [
                {
                    extend: 'copy',
                    title: 'Templates',
                    text: window.copyButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
                {
                    extend: 'csv',
                    title: 'Templates',
                    text: window.csvButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
                {
                    extend: 'excel',
                    title: 'Templates',
                    text: window.excelButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
                {
                    extend: 'pdf',
                    title: 'Templates',
                    text: window.pdfButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
                {
                    extend: 'print',
                    title: 'Templates',
                    text: window.printButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
                {
                    extend: 'colvis',
                    title: 'Templates',
                    text: window.colvisButtonTrans,
                    exportOptions: {
                        columns: [0, 1, 2, 3, 4]
                    }
                },
            ]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
    });
</script>