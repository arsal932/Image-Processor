@model Image_Processor.Models.CategoryViewModel

<div class="modal-header">
    <h4 class="modal-title">Delete Category</h4>
    <button onclick="hideView('myModal')" type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<form asp-action="Delete" method="post">
    <div class="modal-body">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="Name" />
        <div class="text-danger">@ViewBag.Message</div>
        <div class="input-group mb-3">
            <div class="col-sm-12">
                <p>
                    Are you sure to delete @Model.Name (Category)? All the information related to @Model.Name will be deleted.
                </p>
            </div>
        </div>
    </div>
    <div class="modal-footer justify-content-between">
        <button type="button" onclick="hideView('myModal')" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" onclick="hideView('myModal')" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</button>
    </div>
</form>   